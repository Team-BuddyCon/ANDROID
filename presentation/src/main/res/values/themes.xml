<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BuddyCon" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/skb_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="Theme.BuddyCon.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/skb_blue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_buddycon_title</item>
        <item name="postSplashScreenTheme">@style/Theme.BuddyCon</item>
    </style>
</resources>